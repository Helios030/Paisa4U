<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.paisa_them" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:forceDarkAllowed"  tools:targetApi="Q" >false</item>

    </style>

    <style name="Loading" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>


    <style name="AlertDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>

    </style>

    <style name="popwindowAnim">
        <item name="android:windowEnterAnimation">@anim/paisa_fade_in</item>
        <item name="android:windowExitAnimation">@anim/paisa_fade_out</item>
    </style>



    <declare-styleable name="ItemViewInput">
        <attr name="input_title_text" format="string" />
        <attr name="input_edit_text" format="string" />
        <attr name="input_is_number" format="boolean" />

    </declare-styleable>

    <declare-styleable name="ItemViewSelect">
        <attr name="title_text" format="string" />
        <attr name="select_text" format="string" />
    </declare-styleable>


    <declare-styleable name="ItemViewShow">
        <attr name="tv_text" format="string" />
    </declare-styleable>
    <declare-styleable name="ItemViewShowLine">
        <attr name="tv_line_title" format="string" />
        <attr name="tv_line_value" format="string" />
    </declare-styleable>


    <declare-styleable name="ItemViewRadio">
        <attr name="radio_first" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <attr name="page">
            <enum name="first" value="1" />
            <enum name="second" value="2" />
            <enum name="third" value="3" />
            <enum name="fourth" value="4" />
        </attr>

    </declare-styleable>

    <style name="Theme.paisa_them.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="radiobutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item><!--去除RadioButton默认带的圆点-->
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>